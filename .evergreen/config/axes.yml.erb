           VERSION: "latest"
      - id: "7.0"
        display_name: "MongoDB 7.0"
        variables:
           VERSION: "7.0"
      - id: "6.0"
        display_name: "MongoDB 6.0"
        variables:
           VERSION: "6.0"
      - id: "5.3"
        display_name: "MongoDB 5.3"
        variables:
           VERSION: "5.3"
      - id: "5.0"
        display_name: "MongoDB 5.0"
